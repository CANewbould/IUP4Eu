--------------------------------------------------------------------------------
-- service routines
--------------------------------------------------------------------------------
function get_param_get(object param, atom p)
    if sequence(param) then
	   return peek_string(p)
    else
	   return peek4s(p)
    end if
end function
--------------------------------------------------------------------------------
function get_param_set(object param, integer len)
    atom p
    if sequence(param) then
        p = allocate(len * 4)
        mem_set(p, 0, len)
        poke(p, param)
    else
        p = allocate(4)
        poke4(p, param)
    end if
    return p
end function
