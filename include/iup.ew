type attrib(string this)
    for i = 1 to length(this) do
        if not upper_case(this[i]) then return FALSE end if
    end for
    return TRUE
end type
--------------------------------------------------------------------------------
type upper_case(integer this)
    return (this > 64) and (this < 91)
end type
