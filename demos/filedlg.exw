-- IupFileDlg Example in Euphoria
-- Shows a typical file-saving dialog.
--------------------------------------------------------------------------------
-- Version 4.0.5.1
-- Dated 2020.09.16
-- Author C A Newbould
-- Changes: documented in common format
--------------------------------------------------------------------------------
-- includes
--------------------------------------------------------------------------------
include iup.ew
--------------------------------------------------------------------------------
-- constants
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
-- types
--------------------------------------------------------------------------------
type Ihandle(object x)
    return 1
end type
--------------------------------------------------------------------------------
-- routines
--------------------------------------------------------------------------------
procedure main()
    IupOpen()
    IupSetLanguage()  -- default: "ENGLISH"
    Ihandle filedlg = IupFileDlg()
    IupSetAttributes(filedlg, "DIALOGTYPE = SAVE, TITLE = \"File Save\"")
    IupSetAttributes(filedlg, "FILTER = \" .bmp\", FILTERINFO = \"Bitmap Files\"")
    IupPopup(filedlg, IUP_CENTER, IUP_CENTER)
    switch IupGetInt(filedlg, "STATUS") do
    case 1 then
        IupMessage("New file", IupGetAttribute(filedlg, "VALUE"))
    case 0 then
        IupMessage("File already exists", IupGetAttribute(filedlg, "VALUE"))
    case -1 then
        IupMessage("IupFileDlg", "Operation Cancelled")
    end switch
    IupDestroy(filedlg)
    IupClose()
end procedure
--------------------------------------------------------------------------------
-- execution
--------------------------------------------------------------------------------
main()
