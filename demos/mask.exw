--/*
--= Program: (iup4eu)(demos)mask.exw
-- Description: creates an IupText that accepts only numbers
------
--[[[Version: 4.0.5.0
--Euphoria Versions: 4.0.5 upwards
--Author: C A Newbould
--Date: 2020.11.29
--Status: operational
--Changes:]]]
--* set out in standard arrangement
--
--==Mask example
--
-- The IupText will receive integer numeric values only
------
--------------------------------------------------------------------------------
--/*
--==Interface
--*/
--------------------------------------------------------------------------------
--/*
--=== Includes
--*/
--------------------------------------------------------------------------------
include iup.ew
--------------------------------------------------------------------------------
--
--=== Constants
--
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--
--=== Euphoria types
--
--------------------------------------------------------------------------------
type Ihandle(object x)
    return 1
end type
--------------------------------------------------------------------------------
--
--=== Variables
--
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--
--=== Routines
--
--------------------------------------------------------------------------------
procedure main(string title)
    IupOpen()
    Ihandle text = IupText("")
    IupSetAttribute(text, "MASK", "/d+")
    IupSetAttribute(text, "TIP", "Will only accept integer values")
    IupSetAttribute(text, "SIZE", "100x")
    IupSetAttribute(text, "EXPAND", "HORIZONTAL")
    Ihandle dg = IupDialog(text)
    IupSetAttribute(dg, "SIZE", "QUARTERxEIGHTH")
    IupSetAttribute(dg, "TITLE", title)
    IupShow(dg)
    IupMainLoop()
    IupClose()
end procedure
--------------------------------------------------------------------------------
-- execution
--------------------------------------------------------------------------------
main("Iup's Masking")
